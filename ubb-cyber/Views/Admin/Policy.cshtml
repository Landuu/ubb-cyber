@using ubb_cyber.ViewModels;
@model PanelPolicyViewModel;

@{
    ViewData["Title"] = "Edycja polityki haseł - Panel administracyjny";
}

<div>
    <p class="fs-5">
        Panel administracyjny / Edycja polityki haseł
    </p>
    <div class="d-flex justify-content-center">
        <div class="w-50 p-4">
            <div>
                <form asp-controller="Admin" asp-action="Policy">
                    <div class="mb-2">
                        <label for="inputMinPasswordLength" class="form-label">Minimalna długość hasła:</label>
                        <input asp-for="MinPasswordLength" value="@Model.MinPasswordLength" type="number" class="form-control" id="inputMinPasswordLength">
                        <span class="text-danger" asp-validation-for="MinPasswordLength"></span>
                    </div>

                    <div class="mb-2">
                        <label for="inputPasswordExpireDays" class="form-label">Ważność hasła (dni):</label>
                        <input asp-for="PasswordExpireDays" value="@Model.PasswordExpireDays" type="number" class="form-control" id="inputPasswordExpireDays">
                        <span class="text-danger" asp-validation-for="PasswordExpireDays"></span>
                    </div>

                    <div class="mb-2">
                        <label for="inputUppercaseCount" class="form-label">Minmalna ilość dużych liter:</label>
                        <input asp-for="UppercaseCount" value="@Model.UppercaseCount" type="number" class="form-control" id="inputUppercaseCount">
                        <span class="text-danger" asp-validation-for="UppercaseCount"></span>
                    </div>

                    <div class="mb-2">
                        <label for="inputNumbersCount" class="form-label">Minimalna ilość cyfr:</label>
                        <input asp-for="NumbersCount" value="@Model.NumbersCount" type="number" class="form-control" id="inputNumbersCount">
                        <span class="text-danger" asp-validation-for="NumbersCount"></span>
                    </div>

                    <div class="d-flex justify-content-center">
                        <a asp-controller="Admin" asp-action="Index" class="btn btn-primary px-3 me-3">Anuluj</a>
                        <button type="submit" class="btn btn-success px-3">Zapisz zmiany</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>